{
  "name": "materialthing",
  "version": "1.0.0",
  "description": "A modern UI framework with Material Design components",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev -w @materialthing/playground",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/**/*.ts",
    "clean": "rm -rf packages/*/dist",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "tsup": "^8.5.0"
  },
  "keywords": [
    "ui",
    "framework",
    "material-design",
    "jsx",
    "typescript",
    "css-in-js"
  ],
  "author": "Oarabile Koore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/materialthing.git"
  }
}
