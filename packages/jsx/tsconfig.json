{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": ".",
    "baseUrl": ".",
    "paths": {
      "@materialthing/jsx/*": ["./*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
