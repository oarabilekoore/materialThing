{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@materialthing/jsx",
    "baseUrl": ".",
    "paths": {
      "@materialthing/core": ["../core/index.ts"],
      "@materialthing/core/*": ["../core/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
