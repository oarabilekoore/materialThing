{
  "name": "@materialthing/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./renderer": {
      "import": "./dist/renderer.js",
      "require": "./dist/renderer.cjs",
      "types": "./dist/renderer.d.ts"
    },
    "./css": {
      "import": "./dist/css-manager.js",
      "require": "./dist/css-manager.cjs",
      "types": "./dist/css-manager.d.ts"
    },
    "./router": {
      "import": "./dist/dom-router.js",
      "require": "./dist/dom-router.cjs",
      "types": "./dist/dom-router.d.ts"
    }
  },
  "scripts": {
    "build": "tsup index.ts renderer.ts css-manager.ts state-manager.ts dom-router.ts --format esm,cjs --dts --external @materialthing/jsx",
    "dev": "tsup index.ts renderer.ts css-manager.ts state-manager.ts dom-router.ts --format esm,cjs --watch --dts --external @materialthing/jsx"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@materialthing/jsx": "workspace:*"
  }
}
